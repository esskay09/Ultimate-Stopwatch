<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/Dbg">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="3"/>

	<LinearLayout
		android:id="@+id/theme2darklinearlayout"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="30"
		android:orientation="horizontal"
		android:background="@color/Dml">

		<TextView
			android:id="@+id/hours"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="4"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:gravity="center"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:paddingBottom="9dp"
			android:textSize="@dimen/maintextsz"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/theme2darkdot1"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text=":"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="@dimen/dot"
			android:gravity="left|center_vertical"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:textStyle="bold"
			android:paddingBottom="17dp"/>

		<TextView
			android:id="@+id/min_tens"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="4"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="@dimen/maintextsz"
			android:gravity="right|center_vertical"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:paddingBottom="9dp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/min_unit"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="4"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="@dimen/maintextsz"
			android:gravity="left|center_vertical"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:paddingBottom="9dp"
			android:textStyle="normal|bold" />

		<TextView
			android:id="@+id/theme2darkdot2"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:text=":"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="@dimen/dot"
			android:gravity="left|center_vertical"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:textStyle="bold"
			android:paddingBottom="17dp"/>

		<TextView
			android:id="@+id/sec_tens"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="4"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="@dimen/maintextsz"
			android:gravity="right|center_vertical"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:paddingBottom="9dp"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/sec_unit"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="4"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="@dimen/maintextsz"
			android:gravity="left|center_vertical"
			android:textColor="@color/Dmt"
			android:typeface="sans"
			android:paddingBottom="9dp"
			android:textStyle="normal|bold" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="8"
		android:orientation="horizontal"
		android:gravity="end"
		android:id="@+id/llmicronano">

		<TextView
			android:id="@+id/microsec"
			android:text="0"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#1EB5DD"
			android:typeface="serif"
			android:textSize="@dimen/microsec"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/nanosec"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="00"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#1EB5DD"
			android:textSize="@dimen/nanosec"
			android:typeface="serif"
			android:textStyle="bold" />

	</LinearLayout>

	<RelativeLayout
		android:layout_weight="40"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/rl">

		<ListView
			android:id="@+id/timerlist"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:dividerHeight="0dp"/>

		<Button
			android:id="@+id/addbtn"
			android:background="@drawable/addbutton"
			android:layout_alignParentRight="true"
			android:layout_width="@dimen/add"
			android:text="+"
			android:textSize="@dimen/nanosec"
			android:onClick="addtimer"
			android:textColor="#FFFFFF"
			android:paddingBottom="1dp"
			android:layout_alignParentBottom="true"
			android:layout_height="@dimen/add" />

	</RelativeLayout>


	<TextView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:id="@+id/textView8"
		android:layout_weight="2" />

	<LinearLayout
		android:id="@+id/ll_buttons"
		android:layout_height="0dp"
		android:layout_width="fill_parent"
		android:layout_weight="8"
		android:orientation="horizontal">

		<Button
			android:textColor="@color/Dmt"
			android:id="@+id/lap_reset_button"
			android:layout_weight="24"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="RESET"
			android:background="@color/DBut"
			android:onClick="resetclick"
			android:textSize="@dimen/buttontext"/>


		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:id="@+id/textView"
			android:layout_weight="1" />

		<Button
			android:textColor="@color/Dmt"
			android:id="@+id/start_pause_button"
			android:layout_weight="24"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="START"
			android:onClick="startclick"
			android:textSize="@dimen/buttontext"
			android:background="@color/DBut"/>

	</LinearLayout>

</LinearLayout>

